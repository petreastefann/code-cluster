<Window x:Class="MemoryTilesGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryTilesGame"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="change dis" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="20" Foreground="Black" Margin="10,10,10,0" TextAlignment="Center" 
            Text="Welcome to an experience that will truly leave you with hope for the future. Welcome to the place where your brain will significantly grow more synapses as you play this piece of art. Welcome to the best memory game that has ever been created. have fun" TextWrapping="WrapWithOverflow"/>
        <Button x:Name="start" Content="ok"  FontSize="20" Margin="0,230,0,0" Click="start_Click" Width="100" Height="48" />
        <Button x:Name="exit" Content="no" Margin="0,350,0,0" FontSize="8" Click="exit_Click" FontWeight="Normal" Width="41" Height="22"/>
    </Grid>
</Window>