<Window x:Class="MemoryTilesGame.CreateNewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryTilesGame"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Title="CreateNewUserWindow" Height="500" Width="400">

    <Grid>
        <Image x:Name="newUserImageBox" Height="320" Width="320" Margin="0,0,0,90"></Image>
        <Button x:Name="next" Content="" Width="20" Height="40" Margin="360,0,0,80" Click="next_Click"></Button>
        <Button x:Name="prev" Content="" Width="20" Height="40" Margin="0,0,360,80" Click="prev_Click"></Button>
        <TextBlock Text="enter your name below" Width="250" Height="40" FontSize="24" Margin="0,310,140,0" ></TextBlock>
        <TextBox x:Name="newUserNameBox" Width="280" Height="40" FontSize="24" Margin="0,380,110,0"></TextBox>
        <Button x:Name="add" Content="add" Width="80" Height="30" Margin="300,340,0,0" Click="add_Click"></Button>
        <Button x:Name="cancel" Content="cancel" Width="80" Height="30" Margin="300,430,0,0" Click="cancel_Click"></Button>
    </Grid>
</Window>
