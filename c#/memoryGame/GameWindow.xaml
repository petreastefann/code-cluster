<Window x:Class="memoryGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:memoryGame"
        mc:Ignorable="d"
        Title="GameWindow" Height="600" Width="800">
    <Grid>
        <Grid x:Name="GameGrid" Grid.Row="0">
            <!-- optionally empty -->
        </Grid>
        <StackPanel x:Name="InfoGrid" Grid.Row="1" VerticalAlignment="Top">
            <TextBlock Name="tbTime" />
            <TextBlock Name="youLostMessage" Text="" FontSize="20"></TextBlock>
        </StackPanel>
        <StackPanel x:Name="ButtonGrid" VerticalAlignment="Bottom" Height="40">
            <Button x:Name="test1" Content="save and exit" Width="184"/>
        </StackPanel>
    </Grid>
</Window>
